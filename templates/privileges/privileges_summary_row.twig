<tr>
    <td>{{ name }}</td>
    <td><code>{{ privileges }}</code></td>
    <td>{{ grant ? 'Yes'|trans : 'No'|trans }}</td>

    {% if type == 'database' %}
        <td>{{ tablePrivs ? 'Yes'|trans : 'No'|trans }}</td>
    {% elseif type == 'table' %}
        <td>{{ columnPrivs ? 'Yes'|trans : 'No'|trans }}</td>
    {% endif %}

    <td>{{ editLink|raw }}</td>
    <td>{{ revokeLink|raw }}</td>
</tr>
